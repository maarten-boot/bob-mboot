Hazard = new Object();

define Hazard.SetLocationMutual(what) {
    this.location = what;
    what.AddHazard(this);
}

define Hazard.initialize(cave) {
    this.SetLocationMutual(cave);
    // this.location = cave;
    // cave.AddHazard(this);
    return this;
}

define Hazard.Move(cave) {
    if (this.location != cave) {
        this.location.RemoveHazard(this);

        // this.location = cave;
        // cave.AddHazard(this);
        this.SetLocationMutual(cave);
    }

    return this;
}

